<div class="row">
  <div class="small-12 columns">
    <%= form_for(@restaurant) do |f| %>
    <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :nom %><br>
      <%= f.text_field :nom %>
    </div>

    <div class="field">
      <%= f.label :restaurateur, 'Restaurateur' %><br>
      <%= f.select :restaurateur, Restaurant::RESTAURATEURS.collect {|r| [ r.capitalize, r ] }, prompt: 'Selectionner un Restaurateur' %>
    </div>
    <div class="actions">
      <%= f.submit class: "button right" %>
    </div>
    <div class="clearfix"></div>
    <% end %>
  </div>
</div>

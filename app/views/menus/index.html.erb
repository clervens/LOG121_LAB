<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.nom %></td>
        <td><%= menu.restaurant.nom %></td>
        <td><%= link_to 'Show', [@restaurant, menu] %></td>
        <td><%= link_to 'Edit', edit_restaurant_menu_path(@restaurant, menu) %></td>
        <td><%= link_to 'Destroy', [@restaurant, menu], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Menu', new_restaurant_menu_path, class: "button tiny radius secondary" %>
  </div>
</div>
